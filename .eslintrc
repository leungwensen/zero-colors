{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "chai": true
  },
  "rules": {
    "no-cond-assign": 0,
    "max-len": [
      2,
      120,
      4,
      {
        "ignoreUrls": true
      }
    ],
    "id-length": [
      2,
      {
        "min": 1
      }
    ]
  }
}
